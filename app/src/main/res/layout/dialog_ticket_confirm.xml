<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="event"
            type="com.idevelopstudio.whatson.models.Event" />
        <variable
            name="viewModel"
            type="com.idevelopstudio.whatson.eventDetails.EventDetailViewModel" />
    </data>


        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="220dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_marginTop="8dp"
                        android:id="@+id/image_card_view"
                        android:layout_width="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/payment_message"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="100dp">

                        <ImageView
                            android:id="@+id/image_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            app:eventImage="@{event}" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/title_text_view"
                        app:layout_constraintStart_toEndOf="@id/image_card_view"
                        android:layout_marginStart="16dp"
                        app:layout_constraintVertical_bias="0.15"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        style="@style/DarkTextViewStyle"
                        app:layout_constraintTop_toTopOf="@id/image_card_view"
                        app:layout_constraintBottom_toBottomOf="@id/image_card_view"
                        android:layout_width="wrap_content"
                        eventName="@{event}"
                        android:layout_height="wrap_content"
                        tools:text="Hiking Trip" />

                    <TextView
                        android:id="@+id/ticket_name_text_view"
                        app:layout_constraintStart_toEndOf="@id/image_card_view"
                        android:layout_marginStart="16dp"
                        style="@style/DarkSecondaryTextViewStyle"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintVertical_bias="0.15"
                        app:layout_constraintTop_toBottomOf="@id/title_text_view"
                        app:layout_constraintBottom_toBottomOf="@id/image_card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:ticketName="@{viewModel.ticket.ticket}"
                        app:selectedTicket="@{viewModel.selectedNumberOfTickets.intValue()}"
                        tools:text="21/07/2020 - 09:00" />

                    <TextView
                        android:id="@+id/location_text_view"
                        app:layout_constraintStart_toEndOf="@id/image_card_view"
                        android:layout_marginStart="16dp"
                        app:layout_constraintVertical_bias="1"
                        android:textSize="16sp"
                        android:text="@{event.address}"
                        style="@style/DarkSecondaryTextViewStyle"
                        app:layout_constraintTop_toBottomOf="@id/ticket_name_text_view"
                        app:layout_constraintBottom_toBottomOf="@id/image_card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Misty Mountain" />

                    <TextView
                        android:id="@+id/price_text_view"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintVertical_bias="1"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/location_text_view"
                        app:layout_constraintHorizontal_bias="0.9"
                        app:layout_constraintTop_toBottomOf="@id/ticket_name_text_view"
                        app:layout_constraintBottom_toBottomOf="@id/image_card_view"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@{viewModel.totalPrice.toString()}"
                        android:textColor="@color/pastelGreen"
                        android:layout_height="wrap_content"
                        tools:text="$100" />

                    <TextView
                        android:id="@+id/payment_message"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/darkTextColor"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please Pay at the venue"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>


            <Button
                android:text="Confirm Reservation"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:id="@+id/reserve_ticket_button"
                android:background="@color/buttonColor"
                android:layout_width="250dp"
                android:layout_height="70dp" />
        </LinearLayout>
</layout>